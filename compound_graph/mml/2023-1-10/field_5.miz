assume A: R is strong_polynomial_disjoint;
set o = the Element of (the carrier of R)/\(the carrier of Polynom-Ring R);
now assume not R is polynomial_disjoint;
  then [#]R /\ [#]Polynom-Ring R <> {} by FIELD_3:def 3;
  then o in the carrier of R & o in the carrier of Polynom-Ring R
       by XBOOLE_0:def 4;
  hence contradiction by A;
  end;
hence thesis;
