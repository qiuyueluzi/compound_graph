  then A5: deg q is Element of NAT by T8b;
  q *' p = 1.PR by A1,POLYNOM3:def 10
        .= 1_.(R) by POLYNOM3:def 10;
  then A2: deg q + deg p = deg(1_.(R)) by A4,HURWITZ:23;
  A8: len(1_.(R)) = 1 by POLYNOM4:4;
  deg p = 2 by HURWITZ:27;
