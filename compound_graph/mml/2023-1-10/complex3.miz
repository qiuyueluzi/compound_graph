  proof
    per cases;
    suppose a = 0;
      hence thesis by INT_1:45;
    end;
    suppose a > 0; then
      reconsider a as positive Real;
      reconsider b = director a as positive weightless Real;
      b = 1 & frac a = frac |.a.| by TA1;
      hence thesis;
    end;
  end;
