      a = 0; then
      a|^n = 0 or n = 0 by NAT_1:14,NEWTON:11; then
      |.a|^n.| = 0 or a|^n = 1 by NEWTON:4;
      hence thesis;
    end;
    suppose
      |.a.| = 1; then
      1 = |.a.||^n
      .= |.a|^n.| by TAYLOR21;
      hence thesis;
    end;
  end;
end;

