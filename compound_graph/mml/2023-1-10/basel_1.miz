end;

registration
  let a be positive Real;
  let b;
  let d be negative Real;
  cluster rseq(a,b,0,d) -> non bounded_below;
  coherence
  proof
    let r;
A1: r*d/d = r by XCMPLX_1:89;
A2: (d*r-b)/a*a = d*r-b by XCMPLX_1:87;
    consider n such that
A3: n > (d*r-b)/a by SEQ_4:3;
